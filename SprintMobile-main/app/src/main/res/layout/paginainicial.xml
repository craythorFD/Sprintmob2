<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Top Bar -->

    <!-- Title Section -->

    <TextView
        android:id="@+id/plusoftText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-medium"
        android:text="PLU$OFT"
        android:textColor="#FF0000"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/myAccountButton"
        app:layout_constraintHorizontal_bias="0.087"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/myAccountButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@android:color/white"
        android:text="Minha conta"
        android:textColor="#FF0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/plusoftText" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conheça o\nAssistente Virtual"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@+id/plusoftText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:background="#FF4500"
        android:padding="16dp"/>

    <Button
        android:id="@+id/testButtonTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TESTE AGORA"
        android:backgroundTint="#FFFFFF"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Available All the Time Section -->
    <TextView
        android:id="@+id/availableTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disponível o tempo todo"
        android:textColor="#FF4500"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/testButtonTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/availableDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nosso Assistente Virtual de Suporte, impulsionado por IA generativa, é projetado para fornecer suporte personalizado e de alta qualidade, 24 horas por dia, 7 dias por semana."
        android:textColor="#000000"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/availableTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Perfect Support for You Section -->

    <TextView
        android:id="@+id/supportTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="sans-serif-medium"
        android:text="O suporte perfeito para você"
        android:textColor="#FF4500"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/availableDescription" />

    <TextView
        android:id="@+id/supportDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="O Assistente Virtual da Plusoft não apenas responde a perguntas frequentes, mas também é capaz de resolver problemas, interagir de forma natural e se adaptar às necessidades individuais de cada usuário."
        android:textColor="#000000"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/supportTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Trust Plusoft Section -->
    <TextView
        android:id="@+id/trustText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Confie na Plusoft para revolucionar a maneira como você se relaciona com seus clientes, proporcionando um suporte mais rápido, inteligente e eficiente."
        android:textColor="#000000"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/supportDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Test Now Button at Bottom -->
    <Button
        android:id="@+id/testButtonBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TESTE AGORA"
        android:backgroundTint="#FFFFFF"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/trustText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>